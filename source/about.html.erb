<% content_for :title, "About" %>

<div class="row">
  <div class="col-lg-3" id="nav">
    <ul class="nav list-group affix">
        <li class="list-group-item active"><a href="#mission">Mission</a></li>
        <li class="list-group-item"><a href="#contact">Contact</a></li>
        <li class="list-group-item"><a href="#members">Team Leaders</a></li>
        <li class="list-group-item"><a href="#coaches">Coaches and Mentors</a></li>
    </ul>
  </div>

  <div class="col-lg-9">
    <div class="row">
      <div class="col-lg-12 about-block">
        <h3 id="mission" class="large-header">Mission</h3>

        <div>
          <p>The mission of Armada Robotics is to offer students the opportunity to learn leadership, experience, and real-world techniques to creatively meet an engineering challenge with the help
          of experienced mentors. The team will also foster a cooperative environment dedicated to the growth of all members and mentors as well as the community and other FIRST teams-all while
          having fun!</p>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12 about-block">
        <h3 id="contact" class="large-header">Contact</h3>

        <address>
          <strong>Stillwater Area High School</strong><br>
          5701 Stillwater Blvd N.<br>
          Stillwater, MN 55082<br>
          Rooms: B116, B120, B122, B124<br />

        </address>

        <address>
          <strong>Team Email</strong><br>
          <a href="mailto:armada.robotics2508@gmail.com">armada.robotics2508@gmail.com</a>
        </address>

        <address>
          <strong>Captain's Email</strong><br>
          <a href="mailto:alexjgserier@gmail.com">joeyfedor@gmail.com</a>
        </address>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12">
        <h3 id="members" class="large-header">Team Leaders</h3>
      </div>
    </div>

    <% data.leaders.each do |leader| %>
      <div class="col-sm-4 col-md-3">
        <div class="thumbnail">
          <img src="<%= leader.image %>" alt="<%= leader.name %>'s Image">
          <div class="caption">
            <h4>
              <b><%= leader.name %></b>
            </h4>
            <h5 class="leader"><%= leader.role %></h5>
            <p class="small"><%= leader.about %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
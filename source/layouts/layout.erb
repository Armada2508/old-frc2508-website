          </li>
          <!--
          <li <%= "class='active'" if current_page.path == "media.html" %>>
            <a href="#">Media</a>
          </li>
          <li <%= "class='active'" if current_page.path == "resources.html" %>>
            <a href="#">Resources</a>
          </li>
          -->
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <li class="first">
            <a href="http://www.usfirst.org/" target="_blank">
              <%= image_tag "first-logo.gif" %>
